{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["ESNext", "dom"],
    "jsx": "react",
    "module": "commonjs",
    "types": ["jest"],
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    // TODO: pass noImplicitAny to true
    "noImplicitAny": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true
  },
  "include": ["./src"]
}
