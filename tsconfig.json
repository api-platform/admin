{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["ESNext", "dom"],
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./lib/cjs",
    "declaration": true,
    "declarationMap": true,
    "rootDir": "./src",
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    // TODO: pass noImplicitAny to true
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true
  },
  "include": ["./src"],
  "exclude": ["./src/**/*.test.ts", "./src/**/*.test.tsx"]
}
